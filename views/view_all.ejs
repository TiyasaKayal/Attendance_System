<html>
    <title>All students</title>
    <%- include('./partials/head.ejs') %>
    <style>
        tr[data-href] {
            cursor: pointer;
        }
    </style>
    <body>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
        <%- include('./partials/nav.ejs') %>
        
                     <br>
                    <div style="margin: auto; text-align: center;"><h2 >Registered Students: <%= names.length %> </h2></div>
                    <br>
                
                    
                    <div class="row row-cols-1 row-cols-md-3 g-4" style="margin-left: 180px; margin-right: 180px;">
                    <% for(var i=0;i<names.length;i++) {%>
                        <div class="col d-flex justify-content-center">
                        <div class="card" style="width: 300px; text-align: center; ">
                            <div class="card-header">
                              <%= Rollnos[i] %> 
                            </div>
                            <div class="card-body">
                              <h5 class="card-title"><%= names[i] %> </h5>
                              
                              <a href="/student/<%= Rollnos[i] %> " class="btn btn-primary">View full profile</a>
                            </div>
                        </div>
                    </div>
                    <% } %> 
                </div>
        </body>
</html>